{
  "$id": "http://localhost:8080/json-schema/getOneMetaDataJSONSchema.json",
  "base": "http://localhost:8080/api",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "getOneMetaDataJSONSchema",
  "description": "Metadata schema for all types of objects",
  "type": "object",
  "required": [
    "data"
  ],
  "properties": {
    "additionalProperties": false,
    "data": {
      "type": "object",
      "required": [
        "id",
        "type",
        "attributes"
      ],
      "properties": {
        "id": {
          "type": "string"
        },
        "type": {
          "const": "metaData",
          "description": "The type of the object of the data being returned."
        },
        "attributes": {
          "description": "Schema representing the metadata associated with objects",
          "type": "object",
          "required": [
            "dateCreated",
            "mediaType",
            "copyrightOwner",
            "license",
            "objectType"
          ],
          "additionalProperties": true,
          "properties": {
            "mediaType": {
              "type": "string",
              "description": "IANA media type."
            },
            "objectType": {
              "enum": [
                "Image",
                "Audio",
                "Video",
                "Document"
              ],
              "description": "Type of object stored. Higher level than mediaType."
            },
            "dateCreated": {
              "type": "string",
              "description": "Date representing when object has been initialy created."
            },
            "dateUploaded": {
              "type": "string",
              "description": "Date representing when the associated object got successfully uploaded. Automaticaly set."
            },            
            "uploadedBy": {
              "type": "string",
              "description": "Reference to the person who uploaded the object."
            },
            "hash": {
              "type": "string",
              "description": "Hash of the uploaded object. Automaticaly generated on successful file upload."
            },
            "copyrightOwner": {
              "type": "string",
              "description": "Copyright owner of the object."
            },
            "managedAttributes": {
              "type": "array",
              "items": [
                {
                  "type": [
                    "object"
                  ]
                }
              ],
              "description": "List of key/value pairs of managed attributes."
            },
            "unmanagedAttributes": {
              "type": "array",
              "items": [
                {
                  "type": [
                    "object"
                  ]
                }
              ],
              "description": "List of key/value pairs of unmanaged attributes."
            },
            "derivedFrom": {
              "type": "string",
              "description": "A URL that points to a meta data object that this meta derived from,such as in a thumbnail case",
              "pattern": "^(http://|https://)+"
            }
          }
        },
        "relationships": {
          "properties": {
            "managedAttributes": {
              "allOf": [
                {
                  "$ref": "common/relationship.json"
                }
              ]
            },
            "dcCreator": {
              "data": { 
              "type": "object",
              "required": [
        	     "id",
			     "type",
               ],
               "properties": {
                  "id": {
                    "type": "string",
                    "description": "The id of the dcCreater."
                  },
                  "type": {
          	        "const": "agent",
                    "description": "The type of the dcCreater object."
                  }
                }      			  
              }              
            }            
          }
        }
      }
    }
  }
}